extends layout/layout-minimal.pug

block register
    // Register panel
    section.panel.panel-form
        h2.panel-title Вход
            div.dropdown-block.dropdown-lang
                a(data-toggle="dropdown" href="").select-lang Russian
                ul(data-toggle="dropdown-menu").dropdown-menu.dropdown-menu-lang
                    li.drop-item Russian
                    li.drop-item English
                    li.drop-item China

        div.panel-body.panel-form-body
            form
                div.form-line
                    label(class="label" for="email") Email
                    input(class="input" type="text" name="email" id="email" placeholder="Эл. почта" value="")

                div.form-line
                    label(class="label" for="password") Пароль
                    input(class="input" type="password" name="password" id="password" placeholder="Пароль")

                button(class="btn btn-block btn-form blue" type="submit") Войти
                a(class="btn btn-block btn-form white" href="register.html") Регистрация
                a(class="link tip-password" href="") Забыли пароль?